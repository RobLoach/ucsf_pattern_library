<div class="masonry--block-wrapper post-filter__wrapper">
  <div id="masonry--related" class="post-filter">
    <h2 class="headline with--border">Related Articles</h2>
    <div class="post-filter-results__wrapper">
      <ul id="post-filter-results" class="masonry-results post-filter__results">
        {{# related-posts }}
        <li class="masonry-sizer">
          <div class="post-filter__results__inner">{{> molecules-block-post-no-image }}</div>
        </li>
        {{/ related-posts }}
        <li class="more masonry-sizer">
          <div class="post-filter__results__inner">
            <div class="block-more">
              <a href="{{ url }}">Subscribe to this topic Â» </a>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>